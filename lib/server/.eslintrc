{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
  },
  "rules": {
    "no-console": 0,
    "max-len": [2, 160, 4],
  },
  "globals": {
    "Promise": true,
    "assert": true,
    "should": true,
    "expect": true,
  },
}
